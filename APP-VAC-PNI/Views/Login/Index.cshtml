
@{
    Layout = null;
    ViewBag.Title = "Index";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @Styles.Render("~/Content/root.css")
    @Styles.Render("~/Content/media.css")
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@600&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/gif.css")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>

<body>
    <style>
        .btn:hover, .btn:focus, .btn.focus {
            color: #FF5733;
            text-decoration: none;
        }
    </style>
    <div id="GifContainer" class="hidden">
    </div>
    <form method="post" action='@Url.Action("Index","Login")'>
        <div class="pageSection">
            <div class="loginBox">
                <div class="leftBox">
                    <div class="ctnForm">
                        <h4 style="font-family: 'Open Sans'; text-transform: uppercase;">Sistema de  Evaluación a docentes de nuevo ingreso v24</h4>


                        <div class="ctnForm">
                            @if (ViewBag.Validado != null && !ViewBag.Validado)
                            {
                                <div class="alert alert-warning alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    @ViewBag.Mensaje
                                </div>
                            }
                            <div class="form">
                                <input name="_token" type="hidden" value="">
                                <div class="form-group">
                                    <label for="username" class="control-label">Usuario:</label>
                                    <input id="txtUsername" class="form-control" placeholder="" name="User" type="text" value="">
                                </div>
                                <div class="form-group">
                                    <label for="password" class="control-label">Contraseña:</label>
                                    <input id="txtPassword" class="form-control" placeholder="" name="Pass" type="password" value="">
                                    <span id="spError" class="help-block hidden" style="color:red;"></span>
                                </div>
                                <div class="form-check form-check-inline text-center">
                                    <input class="form-check-input" type="radio" checked="checked" name="TypeUser" id="inlineRadio1" value="true">
                                    <label class="form-check-label" for="inlineRadio1" style="padding-right: 30px;">Director</label>

                                    <input class="form-check-input" type="radio" name="TypeUser" id="inlineRadio1" value="false">
                                    <label class="form-check-label" for="inlineRadio1">Tutor</label>
                                </div>
                                <div class="modal-footer">
                                    <button id="btnIniciarSesion" type="submit" class="btn" style="background-color: #003876">Iniciar Sesión</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="rightBox">
                    <div class="sysLogo">
                        <img src="https://apps.minerd.gob.do/resources/Images/logo-login-concurso.jpg" />
                    </div>
                </div>
            </div>
        </div>
    </form>
    @Scripts.Render("~/Scripts/jquery-1.11.3.min.js")
    @Scripts.Render("~/Scripts/jquery.mask.js")
    @Scripts.Render("~/Scripts/Login/index.js")
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

